@model Domain.Entities.Book

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <title>Update Book</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="collapse navbar-collapse" style="margin-left: 15px;">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" style="color: white; font-weight: bolder;" asp-action="Index" asp-controller="BookStore">Home</a>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        <h1 class="text-center">Book Formulary for @Model.Title</h1>
    </div>
    <div class="my-container">
        <form asp-action="UpdateBook" method="post" class="m-2">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Title">Book Title:</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ISBN">Book ISBN:</label>
                <input asp-for="ISBN" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Year">Year:</label>
                <input type="number" asp-for="Year" class="form-control" min="1" max="3000" />
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</body>

</html>