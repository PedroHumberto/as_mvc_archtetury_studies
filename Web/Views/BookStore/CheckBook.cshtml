@model Domain.Entities.BookAuthor
@{
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <title>Authors</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="collapse navbar-collapse" style="margin-left: 15px;">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" style="color: white; font-weight: bolder;" asp-action="BookForm">
                        Add Author
                    </a>
                </li>
        </div>
    </nav>
    <h1 class="text-center">Book: @Model.Book.Title</h1>

    <p class="text-center"><b>ISBN:</b> @Model.Book.ISBN</p>
    <p class="text-center"><b>Year:</b> @Model.Book.Year</p>

    <div class="my-container" style="width: 750px;">

        <h3>Authors</h3>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Birthdate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bookAuthor in Model.Book.BookAuthor)
                {
                    <tr>
                        <td>
                            @bookAuthor.Author.FirstName @bookAuthor.Author.LastName
                        </td>
                        <td>
                            @bookAuthor.Author.Email
                        </td>
                        <td>
                            @bookAuthor.Author.BirthDate
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</body>

</html>